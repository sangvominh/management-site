rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{user_id} {
      allow read, create: if request.auth != null;
      allow update: if request.auth.uid == user_id;
    }
    match /projects/{project_id} {
      allow read, create, update: if request.auth != null;
      allow delete: if request.auth.uid == resource.data.createBy.id;
    }
  }
}

// auth
// read: online status, create: sign up ||| any authenticated
// update: online status self ||| user own/create

// project collection
// read, create, update ||| any authenticated
// delete ||| user own/create